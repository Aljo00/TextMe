<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TextMe Dashboard</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="icon" type="image/jpg" href="/assets/logo.jpg" />
    <link rel="stylesheet" href="/styles/dashboard.css" />
  </head>
  <body>
    <nav class="top-navbar">
      <div class="brand">TextMe</div>
      <div class="user-info">
        <div class="nav-icons">
          <button class="icon-btn" id="themeToggle">
            <i class="fas fa-moon"></i>
          </button>
          <div class="profile-container">
            <img
              src="<%= user.profilePic %>"
              alt="Profile"
              class="profile-pic"
            />
          </div>
          <button class="logout-btn">Logout</button>
        </div>
      </div>
    </nav>

    <div class="app-container">
      <!-- First Column - Icon Navigation -->
      <div class="nav-icons-column">
        <div class="icon-nav-item active" data-tooltip="Friends">
          <i class="fas fa-users"></i>
        </div>
        <div class="icon-nav-item" data-tooltip="Friend Requests">
          <i class="fas fa-user-plus"></i>
        </div>
        <div class="icon-nav-item" data-tooltip="Search Users">
          <i class="fas fa-search"></i>
        </div>
        <div class="icon-nav-item" data-tooltip="Call History">
          <i class="fas fa-phone-alt"></i>
        </div>
      </div>

      <!-- Second Column - List View -->
      <div class="list-column">
        <div class="list-header">
          <h3>Friends</h3>
        </div>
        <div class="list-content">
          <!-- User list will be dynamically loaded here -->
        </div>
      </div>

      <!-- Third Column - Interaction Area -->
      <div class="interaction-column">
        <button class="back-button">
          <i class="fas fa-arrow-left"></i>
        </button>
        <div class="placeholder-message">
          <i class="fas fa-comments"></i>
          <p>Select a chat to start messaging</p>
        </div>
      </div>
    </div>

    <script src="/scripts/dashboard.js"></script>
  </body>
</html>
